import React, { useState } from 'react';
import { ShoppingCart, Menu, X, Mail, Phone, MapPin, Check, Plus, Minus, Trash2 } from 'lucide-react';

export default function SavoldiShop() {
  const [currentPage, setCurrentPage] = useState('home');
  const [menuOpen, setMenuOpen] = useState(false);
  const [cart, setCart] = useState([]);
  const [cartOpen, setCartOpen] = useState(false);
  const [formData, setFormData] = useState({
    name: '',
    email: '',
    phone: '',
    message: ''
  });
  const [formSubmitted, setFormSubmitted] = useState(false);
  const [checkoutData, setCheckoutData] = useState({
    name: '',
    email: '',
    phone: '',
    address: '',
    city: '',
    zip: '',
    paymentMethod: 'twint'
  });
  const [orderComplete, setOrderComplete] = useState(false);

  const products = [
    {
      id: 1,
      name: '6er Freilandeier',
      price: 4.50,
      description: 'Frische Freilandeier aus Othmarsingen',
      image: 'ü•ö',
      unit: '6 St√ºck'
    },
    {
      id: 2,
      name: '10er Freilandeier',
      price: 7.00,
      description: 'Frische Freilandeier aus Othmarsingen',
      image: 'ü•ö',
      unit: '10 St√ºck'
    },
    {
      id: 3,
      name: '30er Freilandeier',
      price: 19.50,
      description: 'Frische Freilandeier aus Othmarsingen - Vorteilspackung',
      image: 'ü•ö',
      unit: '30 St√ºck'
    }
  ];

  const addToCart = (product) => {
    const existing = cart.find(item => item.id === product.id);
    if (existing) {
      setCart(cart.map(item => 
        item.id === product.id ? {...item, quantity: item.quantity + 1} : item
      ));
    } else {
      setCart([...cart, {...product, quantity: 1}]);
    }
    
    // Warenkorb automatisch √∂ffnen nach Hinzuf√ºgen
    setCartOpen(true);
  };

  const removeFromCart = (productId) => {
    setCart(cart.filter(item => item.id !== productId));
  };

  const updateQuantity = (productId, change) => {
    setCart(cart.map(item => {
      if (item.id === productId) {
        const newQty = item.quantity + change;
        return newQty > 0 ? {...item, quantity: newQty} : item;
      }
      return item;
    }).filter(item => item.quantity > 0));
  };

  const getTotalPrice = () => {
    return cart.reduce((sum, item) => sum + (item.price * item.quantity), 0).toFixed(2);
  };

  const getCartCount = () => {
    return cart.reduce((sum, item) => sum + item.quantity, 0);
  };

  const handleContactSubmit = () => {
    if (formData.name && formData.email && formData.message) {
      setFormSubmitted(true);
      setTimeout(() => {
        setFormData({ name: '', email: '', phone: '', message: '' });
        setFormSubmitted(false);
      }, 3000);
    } else {
      alert('Bitte f√ºllen Sie alle Pflichtfelder aus.');
    }
  };

  const handleCheckout = () => {
    if (!checkoutData.name || !checkoutData.email || !checkoutData.phone || 
        !checkoutData.address || !checkoutData.city || !checkoutData.zip) {
      alert('Bitte f√ºllen Sie alle Felder aus.');
      return;
    }
    
    setOrderComplete(true);
    setTimeout(() => {
      setOrderComplete(false);
      setCurrentPage('home');
      setCheckoutData({ name: '', email: '', phone: '', address: '', city: '', zip: '', paymentMethod: 'twint' });
      setCart([]);
    }, 5000);
  };

  const Logo = () => (
    <div className="flex items-center gap-3">
      <div className="text-4xl">üåæ</div>
      <div>
        <div className="text-2xl font-light tracking-wide">savoldi freiland</div>
        <div className="text-xs text-gray-600 tracking-widest">FREILANDEIER AUS OTHMARSINGEN</div>
      </div>
    </div>
  );

  return (
    <div className="min-h-screen bg-gray-50">
      <header className="bg-white shadow-sm sticky top-0 z-40">
        <div className="max-w-7xl mx-auto px-4 py-4 flex justify-between items-center">
          <button onClick={() => setCurrentPage('home')} className="hover:opacity-80 transition">
            <Logo />
          </button>
          
          <nav className="hidden md:flex gap-8 items-center">
            <button onClick={() => setCurrentPage('home')} className="hover:text-green-700 transition font-medium">Home</button>
            <button onClick={() => setCurrentPage('shop')} className="hover:text-green-700 transition font-medium">Shop</button>
            <button onClick={() => setCurrentPage('about')} className="hover:text-green-700 transition font-medium">√úber uns</button>
            <button onClick={() => setCurrentPage('contact')} className="hover:text-green-700 transition font-medium">Kontakt</button>
            <button 
              onClick={() => setCartOpen(!cartOpen)} 
              className="relative p-2 hover:bg-gray-100 rounded-full transition"
            >
              <ShoppingCart className="w-6 h-6" />
              {getCartCount() > 0 && (
                <span className="absolute -top-1 -right-1 bg-green-600 text-white text-xs w-5 h-5 rounded-full flex items-center justify-center font-bold">
                  {getCartCount()}
                </span>
              )}
            </button>
          </nav>

          <div className="flex md:hidden items-center gap-4">
            <button 
              onClick={() => setCartOpen(!cartOpen)} 
              className="relative p-2"
            >
              <ShoppingCart className="w-6 h-6" />
              {getCartCount() > 0 && (
                <span className="absolute -top-1 -right-1 bg-green-600 text-white text-xs w-5 h-5 rounded-full flex items-center justify-center font-bold">
                  {getCartCount()}
                </span>
              )}
            </button>
            <button onClick={() => setMenuOpen(!menuOpen)} className="p-2">
              {menuOpen ? <X className="w-6 h-6" /> : <Menu className="w-6 h-6" />}
            </button>
          </div>
        </div>

        {menuOpen && (
          <div className="md:hidden bg-white border-t">
            <nav className="flex flex-col p-4 gap-2">
              <button onClick={() => { setCurrentPage('home'); setMenuOpen(false); }} className="text-left py-2 px-4 hover:bg-gray-100 rounded">Home</button>
              <button onClick={() => { setCurrentPage('shop'); setMenuOpen(false); }} className="text-left py-2 px-4 hover:bg-gray-100 rounded">Shop</button>
              <button onClick={() => { setCurrentPage('about'); setMenuOpen(false); }} className="text-left py-2 px-4 hover:bg-gray-100 rounded">√úber uns</button>
              <button onClick={() => { setCurrentPage('contact'); setMenuOpen(false); }} className="text-left py-2 px-4 hover:bg-gray-100 rounded">Kontakt</button>
            </nav>
          </div>
        )}
      </header>

      {cartOpen && (
        <div className="fixed inset-0 z-50 flex justify-end">
          <div onClick={() => setCartOpen(false)} className="absolute inset-0 bg-black bg-opacity-50"></div>
          <div className="relative bg-white w-full max-w-md h-full shadow-xl overflow-y-auto">
            <div className="p-6">
              <div className="flex justify-between items-center mb-6">
                <h2 className="text-2xl font-light">Warenkorb ({getCartCount()})</h2>
                <button onClick={() => setCartOpen(false)} className="p-2 hover:bg-gray-100 rounded-full transition">
                  <X className="w-6 h-6" />
                </button>
              </div>

              {cart.length === 0 ? (
                <div className="text-center py-12">
                  <ShoppingCart className="w-16 h-16 mx-auto text-gray-300 mb-4" />
                  <p className="text-gray-500 mb-4">Ihr Warenkorb ist leer</p>
                  <button 
                    onClick={() => { setCartOpen(false); setCurrentPage('shop'); }}
                    className="bg-green-700 text-white px-6 py-2 rounded hover:bg-green-800 transition"
                  >
                    Zum Shop
                  </button>
                </div>
              ) : (
                <div>
                  <div className="space-y-4 mb-6">
                    {cart.map(item => (
                      <div key={item.id} className="border rounded-lg p-4 bg-gray-50">
                        <div className="flex justify-between items-start mb-3">
                          <div className="flex-1">
                            <h3 className="font-medium text-lg">{item.name}</h3>
                            <p className="text-sm text-gray-600">{item.unit}</p>
                            <p className="text-green-700 font-medium mt-1">CHF {item.price.toFixed(2)}</p>
                          </div>
                          <button 
                            onClick={() => removeFromCart(item.id)}
                            className="text-red-600 hover:text-red-800 p-2 hover:bg-red-50 rounded transition"
                          >
                            <Trash2 className="w-5 h-5" />
                          </button>
                        </div>
                        
                        <div className="flex items-center justify-between">
                          <div className="flex items-center gap-3 bg-white rounded-lg border">
                            <button 
                              onClick={() => updateQuantity(item.id, -1)}
                              className="p-2 hover:bg-gray-100 rounded-l-lg transition"
                            >
                              <Minus className="w-4 h-4" />
                            </button>
                            <span className="font-medium min-w-[2rem] text-center">{item.quantity}</span>
                            <button 
                              onClick={() => updateQuantity(item.id, 1)}
                              className="p-2 hover:bg-gray-100 rounded-r-lg transition"
                            >
                              <Plus className="w-4 h-4" />
                            </button>
                          </div>
                          <div className="text-right">
                            <p className="text-sm text-gray-600">Zwischensumme</p>
                            <p className="font-bold text-lg">CHF {(item.price * item.quantity).toFixed(2)}</p>
                          </div>
                        </div>
                      </div>
                    ))}
                  </div>

                  <div className="border-t pt-4 mb-6">
                    <div className="flex justify-between text-xl font-bold mb-2">
                      <span>Gesamtsumme:</span>
                      <span className="text-green-700">CHF {getTotalPrice()}</span>
                    </div>
                    <p className="text-sm text-gray-600">inkl. MwSt. zzgl. Versandkosten</p>
                  </div>
                  
                  <button 
                    onClick={() => { setCurrentPage('checkout'); setCartOpen(false); }}
                    className="w-full bg-green-700 text-white py-4 rounded-lg text-lg font-medium hover:bg-green-800 transition shadow-lg"
                  >
                    Zur Kasse gehen
                  </button>
                </div>
              )}
            </div>
          </div>
        </div>
      )}

      <main>
        {currentPage === 'home' && (
          <div>
            <div className="bg-gradient-to-br from-green-50 to-yellow-50 py-20">
              <div className="max-w-7xl mx-auto px-4 text-center">
                <h1 className="text-5xl font-light mb-6">Frische Freilandeier aus Othmarsingen</h1>
                <p className="text-xl text-gray-700 mb-8 max-w-2xl mx-auto">
                  Nat√ºrlich aufgezogen, regional produziert, direkt zu Ihnen nach Hause geliefert.
                </p>
                <button 
                  onClick={() => setCurrentPage('shop')}
                  className="bg-green-700 text-white px-8 py-4 rounded-lg text-lg hover:bg-green-800 transition shadow-lg"
                >
                  Jetzt bestellen
                </button>
              </div>
            </div>

            <div className="max-w-7xl mx-auto px-4 py-16 grid md:grid-cols-3 gap-8">
              <div className="text-center p-6 bg-white rounded-lg shadow-sm">
                <div className="text-5xl mb-4">üåæ</div>
                <h3 className="text-xl font-medium mb-2">Freilandhaltung</h3>
                <p className="text-gray-600">Unsere H√ºhner leben artgerecht mit viel Auslauf im Freien</p>
              </div>
              <div className="text-center p-6 bg-white rounded-lg shadow-sm">
                <div className="text-5xl mb-4">üìç</div>
                <h3 className="text-xl font-medium mb-2">Regional</h3>
                <p className="text-gray-600">Aus Othmarsingen, f√ºr die Region - kurze Wege garantiert</p>
              </div>
              <div className="text-center p-6 bg-white rounded-lg shadow-sm">
                <div className="text-5xl mb-4">‚ú®</div>
                <h3 className="text-xl font-medium mb-2">Frisch</h3>
                <p className="text-gray-600">T√§glich frisch von unseren gl√ºcklichen Hennen</p>
              </div>
            </div>
          </div>
        )}

        {currentPage === 'shop' && (
          <div className="max-w-7xl mx-auto px-4 py-16">
            <h1 className="text-4xl font-light mb-4 text-center">Unsere Produkte</h1>
            <p className="text-center text-gray-600 mb-12">Frische Freilandeier in verschiedenen Packungsgr√∂ssen</p>
            <div className="grid md:grid-cols-3 gap-8">
              {products.map(product => (
                <div key={product.id} className="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-xl transition-all">
                  <div className="text-8xl text-center py-12 bg-gradient-to-br from-yellow-50 to-orange-50">
                    {product.image}
                  </div>
                  <div className="p-6">
                    <h3 className="text-2xl font-medium mb-2">{product.name}</h3>
                    <p className="text-sm text-gray-500 mb-2">{product.unit}</p>
                    <p className="text-gray-600 mb-4">{product.description}</p>
                    <div className="flex justify-between items-center mt-6">
                      <span className="text-2xl font-bold text-green-700">CHF {product.price.toFixed(2)}</span>
                      <button 
                        onClick={() => addToCart(product)}
                        className="bg-green-700 text-white px-6 py-3 rounded-lg hover:bg-green-800 transition shadow-md font-medium"
                      >
                        In den Warenkorb
                      </button>
                    </div>
                  </div>
                </div>
              ))}
            </div>
          </div>
        )}

        {currentPage === 'about' && (
          <div className="max-w-4xl mx-auto px-4 py-16">
            <h1 className="text-4xl font-light mb-8">√úber Savoldi Freiland</h1>
            <div className="bg-white rounded-lg shadow-md p-8 space-y-6">
              <p className="text-lg">
                Willkommen bei Savoldi Freiland - Ihrem regionalen Anbieter f√ºr frische Freilandeier aus Othmarsingen.
              </p>
              <p className="text-gray-700">
                Seit vielen Jahren produzieren wir hochwertige Eier aus artgerechter Freilandhaltung. Unsere Legehennen 
                genie√üen t√§glich Auslauf im Freien und werden mit bestem Futter versorgt. Das Resultat sind Eier von 
                h√∂chster Qualit√§t mit intensivem Geschmack und leuchtend gelbem Dotter.
              </p>
              <p className="text-gray-700">
                Regionalit√§t und Nachhaltigkeit stehen bei uns an erster Stelle. Wir beliefern Kunden in der Region 
                und sorgen so f√ºr kurze Transportwege und maximale Frische.
              </p>
              <div className="pt-6 border-t">
                <h3 className="text-xl font-medium mb-4">Unsere Werte:</h3>
                <ul className="space-y-2 text-gray-700">
                  <li>‚úì Artgerechte Freilandhaltung</li>
                  <li>‚úì Regionale Produktion</li>
                  <li>‚úì H√∂chste Qualit√§t</li>
                  <li>‚úì Nachhaltigkeit</li>
                  <li>‚úì Transparenz</li>
                </ul>
              </div>
            </div>
          </div>
        )}

        {currentPage === 'contact' && (
          <div className="max-w-4xl mx-auto px-4 py-16">
            <h1 className="text-4xl font-light mb-12 text-center">Kontakt</h1>
            <div className="grid md:grid-cols-2 gap-8">
              <div className="bg-white rounded-lg shadow-md p-8">
                <h2 className="text-2xl font-medium mb-6">Kontaktinformationen</h2>
                <div className="space-y-4">
                  <div className="flex items-start gap-3">
                    <MapPin className="w-5 h-5 text-green-700 mt-1" />
                    <div>
                      <p className="font-medium">Savoldi Freiland</p>
                      <p className="text-gray-600">Othmarsingen</p>
                      <p className="text-gray-600">Schweiz</p>
                    </div>
                  </div>
                  <div className="flex items-center gap-3">
                    <Phone className="w-5 h-5 text-green-700" />
                    <p className="text-gray-600">+41 XX XXX XX XX</p>
                  </div>
                  <div className="flex items-center gap-3">
                    <Mail className="w-5 h-5 text-green-700" />
                    <p className="text-gray-600">info@savoldi-freiland.ch</p>
                  </div>
                </div>
              </div>

              <div className="bg-white rounded-lg shadow-md p-8">
                <h2 className="text-2xl font-medium mb-6">Nachricht senden</h2>
                {formSubmitted ? (
                  <div className="flex items-center gap-2 text-green-700 bg-green-50 p-4 rounded-lg">
                    <Check className="w-5 h-5" />
                    <span>Vielen Dank! Wir melden uns bald bei Ihnen.</span>
                  </div>
                ) : (
                  <div className="space-y-4">
                    <input
                      type="text"
                      placeholder="Name"
                      value={formData.name}
                      onChange={(e) => setFormData({...formData, name: e.target.value})}
                      className="w-full p-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-green-700"
                    />
                    <input
                      type="email"
                      placeholder="E-Mail"
                      value={formData.email}
                      onChange={(e) => setFormData({...formData, email: e.target.value})}
                      className="w-full p-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-green-700"
                    />
                    <input
                      type="tel"
                      placeholder="Telefon (optional)"
                      value={formData.phone}
                      onChange={(e) => setFormData({...formData, phone: e.target.value})}
                      className="w-full p-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-green-700"
                    />
                    <textarea
                      placeholder="Ihre Nachricht"
                      rows={4}
                      value={formData.message}
                      onChange={(e) => setFormData({...formData, message: e.target.value})}
                      className="w-full p-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-green-700"
                    />
                    <button
                      onClick={handleContactSubmit}
                      className="w-full bg-green-700 text-white py-3 rounded-lg hover:bg-green-800 transition font-medium"
                    >
                      Absenden
                    </button>
                  </div>
                )}
              </div>
            </div>
          </div>
        )}

        {currentPage === 'checkout' && (
          <div className="max-w-5xl mx-auto px-4 py-16">
            <h1 className="text-4xl font-light mb-12 text-center">Bestellung abschlie√üen</h1>
            
            {orderComplete ? (
              <div className="bg-white rounded-lg shadow-md p-12 text-center max-w-2xl mx-auto">
                <div className="text-6xl mb-6">‚úì</div>
                <h2 className="text-3xl font-medium text-green-700 mb-4">Vielen Dank f√ºr Ihre Bestellung!</h2>
                <p className="text-gray-600 mb-2">Ihre Bestellnummer: #{Math.floor(Math.random() * 10000)}</p>
                <p className="text-gray-600 mb-4">Wir haben Ihre Bestellung erhalten und werden sie schnellstm√∂glich bearbeiten.</p>
                <div className="bg-blue-50 border border-blue-200 rounded-lg p-4 mt-6">
                  <p className="text-sm text-gray-700">
                    {checkoutData.paymentMethod === 'twint' ? 'üì± Sie erhalten in K√ºrze eine TWINT-Zahlungsanforderung.' : 'üìÑ Die Rechnung wird Ihrer Lieferung beigelegt.'}
                  </p>
                </div>
              </div>
            ) : (
              <div className="grid lg:grid-cols-5 gap-8">
                <div className="lg:col-span-3 space-y-6">
                  <div className="bg-white rounded-lg shadow-md p-6">
                    <h2 className="text-2xl font-medium mb-6">Lieferadresse</h2>
                    <div className="space-y-4">
                      <input
                        type="text"
                        placeholder="Vor- und Nachname"
                        value={checkoutData.name}
                        onChange={(e) => setCheckoutData({...checkoutData, name: e.target.value})}
                        className="w-full p-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-green-700"
                      />
                      <input
                        type="email"
                        placeholder="E-Mail"
                        value={checkoutData.email}
                        onChange={(e) => setCheckoutData({...checkoutData, email: e.target.value})}
                        className="w-full p-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-green-700"
                      />
                      <input
                        type="tel"
                        placeholder="Telefon"
                        value={checkoutData.phone}
                        onChange={(e) => setCheckoutData({...checkoutData, phone: e.target.value})}
                        className="w-full p-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-green-700"
                      />
                      <input
                        type="text"
                        placeholder="Strasse und Hausnummer"
                        value={checkoutData.address}
                        onChange={(e) => setCheckoutData({...checkoutData, address: e.target.value})}
                        className="w-full p-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-green-700"
                      />
                      <div className="grid grid-cols-2 gap-4">
                        <input
                          type="text"
                          placeholder="PLZ"
                          value={checkoutData.zip}
                          onChange={(e) => setCheckoutData({...checkoutData, zip: e.target.value})}
                          className="w-full p-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-green-700"
                        />
                        <input
                          type="text"
                          placeholder="Ort"
                          value={checkoutData.city}
                          onChange={(e) => setCheckoutData({...checkoutData, city: e.target.value})}
                          className="w-full p-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-green-700"
                        />
                      </div>
                    </div>
                  </div>

                  <div className="bg-white rounded-lg shadow-md p-6">
                    <h2 className="text-2xl font-medium mb-6">Zahlungsart w√§hlen</h2>
                    <div className="space-y-3">
                      <label className="flex items-center gap-3 p-4 border rounded-lg cursor-pointer hover:bg-gray-50">
                        <input 
                          type="radio" 
                          name="payment" 
                          value="twint"
                          checked={checkoutData.paymentMethod === 'twint'}
                          onChange={(e) => setCheckoutData({...checkoutData, paymentMethod: e.target.value})}
                          className="w-5 h-5"
                        />
                        <div className="flex-1">
                          <div className="font-medium">TWINT</div>
                          <div className="text-sm text-gray-600">Schnell und sicher mit TWINT bezahlen</div>
                        </div>
                        <div className="text-2xl">üì±</div>
                      </label>
                      <label className="flex items-center gap-3 p-4 border rounded-lg cursor-pointer hover:bg-gray-50">
                        <input 
                          type="radio" 
                          name="payment" 
                          value="invoice"
                          checked={checkoutData.paymentMethod === 'invoice'}
                          onChange={(e) => setCheckoutData({...checkoutData, paymentMethod: e.target.value})}
                          className="w-5 h-5"
                        />
                        <div className="flex-1">
                          <div className="font-medium">Rechnung</div>
                          <div className="text-sm text-gray-600">Bezahlung nach Erhalt der Ware</div>
                        </div>
                        <div className="text-2xl">üìÑ</div>
                      </label>
                    </div>
                  </div>
                </div>

                <div className="lg:col-span-2">
                  <div className="bg-white rounded-lg shadow-md p-6 sticky top-24">
                    <h2 className="text-2xl font-medium mb-6">Bestell√ºbersicht</h2>
                    <div className="space-y-4 mb-6">
                      {cart.map(item => (
                        <div key={item.id} className="flex justify-between border-b pb-4">
                          <div>
                            <p className="font-medium">{item.name}</p>
                            <p className="text-sm text-gray-600">{item.quantity}x CHF {item.price.toFixed(2)}</p>
                          </div>
                          <p className="font-bold">CHF {(item.price * item.quantity).toFixed(2)}</p>
                        </div>
                      ))}
                    </div>
                    
                    <div className="space-y-2 text-sm mb-4">
                      <div className="flex justify-between text-gray-600">
                        <span>Zwischensumme:</span>
                        <span>CHF {getTotalPrice()}</span>
                      </div>
                      <div className="flex justify-between text-gray-600">
                        <span>Versandkosten:</span>
                        <span>CHF 5.00</span>
                      </div>
                    </div>

                    <div className="pt-4 border-t">
                      <div className="flex justify-between text-2xl font-bold mb-6">
                        <span>Gesamtsumme:</span>
                        <span className="text-green-700">CHF {(parseFloat(getTotalPrice()) + 5.00).toFixed(2)}</span>
                      </div>
                    </div>

                    <button
                      onClick={handleCheckout}
                      className="w-full bg-green-700 text-white py-4 rounded-lg text-lg font-medium hover:bg-green-800 transition shadow-lg"
                    >
                      Jetzt kostenpflichtig bestellen
                    </button>

                    <div className="mt-4 text-xs text-gray-600 text-center">
                      Mit dem Absenden der Bestellung akzeptieren Sie unsere AGB
                    </div>
                  </div>
                </div>
              </div>
            )}
          </div>
        )}
      </main>

      <footer className="bg-gray-800 text-white py-12 mt-20">
        <div className="max-w-7xl mx-auto px-4 grid md:grid-cols-3 gap-8">
          <div>
            <h3 className="text-xl font-medium mb-4">Savoldi Freiland</h3>
            <p className="text-gray-400">Frische Freilandeier aus Othmarsingen</p>
          </div>
          <div>
            <h3 className="text-xl font-medium mb-4">Kontakt</h3>
            <p className="text-gray-400">Othmarsingen, Schweiz</p>
            <p className="text-gray-400">info@savoldi-freiland.ch</p>
          </div>
          <div>
            <h3 className="text-xl font-medium mb-4">√ñffnungszeiten</h3>
            <p className="text-gray-400">Mo - Fr: 8:00 - 18:00</p>
            <p className="text-gray-400">Sa: 8:00 - 14:00</p>
          </div>
        </div>
        <div className="max-w-7xl mx-auto px-4 mt-8 pt-8 border-t border-gray-700 text-center text-gray-400">
          <p>&copy; 2026 Savoldi Freiland. Alle Rechte vorbehalten.</p>
        </div>
      </footer>
    </div>
  );
}